section.mod.schritt
	.mod-highlight.infos.cta
		a(href="gzo_2014_blumenservice_schritt1.html")
			span
				i Schritt 1
		a(href='javascript:void(0);').active
				span
					i Schritt 2
		a(href="gzo_2014_blumenservice_schritt3.html")
				span
					i Schritt 3
		a(href="gzo_2014_blumenservice_schritt4.html")
				span
					i Schritt 4
		h3 Detailbestellung
		form(action='#', method='post' class='schritt')
			fieldset.pos-spec
				img(src="images/temp/img-152x152-1.jpg", alt="image-title")
				.row
					.col-sm-6
						h5 Für wen möchten Sie die Blumen bestellen?
				.row
					.col-sm-6
						.form-group
							label(for='user_login') Nachname des Patienten
							input#user_login.form-control(name='user[login]', required='true', size='30', type='text')
				.row
					.col-sm-6
						.form-group
							label(for='user_password') Vorname des Patienten
							input#user_password.form-control(name='user[password]', size='30', type='password')
				.row
					.col-sm-6
						.form-group
							label(for='user_password_confirmation') Wohnort des Patienten
							input#user_password_confirmation.form-control(name='user[password_confirmation]', size='30', type='password')
				.row
					.col-sm-6
						h5 Betrag
						.form-group.radiobtn
							label.radio
								input#optionsRadios1(type='radio', name='optionsRadios', value='option1', checked='')
								| CHF 30.00
							label.radio
								input#optionsRadios2(type='radio', name='optionsRadios', value='option2')
								| CHF 40.00
							label.radio
								input#optionsRadios1(type='radio', name='optionsRadios', value='option1', checked='')
								| CHF 50.00
			fieldset.pos-spec
				.row
					.col-sm-12
						h5 Besondere Wünsche oder Bemerkungen
				.row
					.col-sm-12
						.form-group
							label(for='user_login') (z.B. spezieller Anlass, bestimmter Liefertermin etc.)
							textarea#textarea.span12(name='textarea', rows='10')
				.row
					.col-sm-12
						h5 Betrag
						.form-group.radiobtn
							label.radio
								input#optionsRadios1(type='radio', name='optionsRadios', value='option1', checked='')
								| Ich wünsche keine Karte
							label.radio
								input#optionsRadios2(type='radio', name='optionsRadios', value='option2')
								| Kleine Karte (Format ca. A7 CHF 2.50)
							label.radio
								input#optionsRadios1(type='radio', name='optionsRadios', value='option1', checked='')
								| Grosse Karte (Format ca. A6, CHF 5.00)
				.row
					.col-sm-12
						.form-group
							label(for='user_password_confirmation') ext für Karte (max. 120 Zeichen)
							textarea#textarea.span12(name='textarea', rows='10')
			button.btn.btn-primary(type='submit') Weiter